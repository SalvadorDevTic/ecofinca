---
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";
import { Image } from "astro:assets";
import logoPrincipal from "../images/Logo-PuraVida-principal.png";
---

<header>
  <nav class="nav">
    <Image
      id="logo-header"
      class="logo"
      width="250"
      src={logoPrincipal}
      alt="imagen del logo ecofinca pura vida"
    />
    <Navigation />
    <div class="group-hanburger-theme">
      <ThemeIcon />
      <Hamburger />
    </div>
  </nav>
</header>
